<h1> Items </h1>
<p><%= link_to 'New Item', new_item_path %></p>
<% @items.each do |item| %>
  <h2><%= item.title %></h2>
  <p><%= item.detail %></p>
  <%= link_to 'Show Items', item_path(item) %>
  <%= link_to 'Edit Items', edit_item_path(item) %>
  <%= link_to 'Destroy Items', item, method: :delete %>
  <% end %>
